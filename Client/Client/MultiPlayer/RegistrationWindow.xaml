<Window x:Class="Client.MultiPlayer.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.MultiPlayer"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="300" Width="200">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" Background="AliceBlue">Registration</TextBlock>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="27" Margin="10,0,0,30" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="180" FontSize="11" SpellCheck.IsEnabled="True"/>
       
        <Button x:Name="Registration" Grid.Row="2" Margin="10" Click="Registration_Click">Register</Button>


    </Grid>
</Window>
