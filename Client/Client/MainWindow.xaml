<Window x:Class="Client.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Client" mc:Ignorable="d" 
        Title="Shitty Checkers" 
        Height="450" Width="800" Name="MainMenu">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.RowSpan="2" Background="Black" Foreground="LightGreen" TextAlignment="Center" FontSize="90" Margin="0,60,0,0" >Shitty Checkers</TextBlock>
        <Button Grid.Row="2" Background="Black" Foreground="LightGreen" FontSize="40"  Click="Single_Player_Menu">Single Player</Button>
        <Button Grid.Row="3" Background="Black" Foreground="LightGreen" FontSize="40"  Click="Multi_Player_Menu">Multi Player</Button>
    </Grid>
</Window>